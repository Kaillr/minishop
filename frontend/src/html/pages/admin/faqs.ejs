<!DOCTYPE html>
<html lang="en">

<head>
    <%- include("../../head") %>
    <link rel="stylesheet" href="/styles/settings.css">
</head>

<body>
    <%- include("../../header") %>
    <%- include("../../cart-menu") %>

    <main>
        <%- include("../../profile-left-sidebar") %>
        <div id="content">
            <h2>FAQs</h2><br>

            <h3>Add FAQ</h3>
            <form id="addFaqForm">
                <label for="brand">Question:</label><br>
                <input type="text" id="question" name="question" required><br><br>

                <label for="name">Answer:</label><br>
                <textarea type="text" id="answer" name="answer" required></textarea><br><br>

                <button type="submit">Add FAQ</button>
            </form><br>
            <div>
                <p id="error" style="color:red;"></p>
                <p id="message" style="color:green;"></p>
            </div>
        </div>
    </main>

    <%- include("../../footer") %>
    <%- include("../../scripts") %>
    <script src="/js/manageFaqs.js"></script>
</body>

</html>